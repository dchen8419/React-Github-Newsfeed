{
  "name": "react-github-newsfeed",
  "displayName": "React Github Newsfeed",
  "description": "Github Newsfeed using React",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:react-github-newsfeed.helloWorld",
    "onView:newsfeed-sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "Newsfeed",
          "title": "Newsfeed",
          "icon": "media/list-flat.svg"
        }
      ]
    },
    "views": {
      "vsinder-sidebar-view": [
        {
          "type": "webview",
          "id": "newsfeed-sidebar",
          "name": "Newsfeed",
          "icon": "media/list-flat.svg",
          "contextualTitle": "Newsfeed"
        }
      ]
    },
    "commands": [
      {
        "command": "react-github-newsfeed.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/react": "^17.0.44",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vscode/test-electron": "^2.0.3",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "react": "^18.0.0",
    "rollup": "^2.70.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "ts-loader": "^9.2.6",
    "typescript": "^4.6.3",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1"
  }
}
